<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
  <android.support.design.widget.TabLayout
      android:id="@+id/tl_main_swiper"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:minHeight="?actionBarSize"
      app:tabGravity="fill"
      app:tabIndicatorColor="@color/colorAccent"
      app:tabIndicatorHeight="0dp"
      app:tabBackground="@color/colorPrimary"
      app:tabMode="fixed"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintVertical_bias="1.0">
  </android.support.design.widget.TabLayout>
  <android.support.v4.view.ViewPager
      android:id="@+id/vp_main_pager"
      android:layout_width="match_parent"
      android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/tl_main_swiper"
  >
  </android.support.v4.view.ViewPager>

  <!--<include layout="@layout/app_bar" android:id="@+id/include"/>-->

</android.support.constraint.ConstraintLayout>