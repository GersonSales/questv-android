<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.series.SeriesFragment" android:background="@color/colorGray" android:clickable="true"
    android:focusable="auto">
  <ImageView
      android:src="@drawable/tbbt_slide"
      android:layout_width="wrap_content"
      android:layout_height="282dp"
      android:id="@+id/iv_series_details_promo" app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
      android:cropToPadding="false" android:scaleType="centerCrop" app:layout_constraintVertical_bias="0.0"/>
  <ImageView
      android:src="@drawable/gradient_background"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:id="@+id/iv_series_details_promo_gradient" app:layout_constraintTop_toTopOf="@+id/iv_series_details_promo"
      app:layout_constraintBottom_toBottomOf="@+id/iv_series_details_promo" app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/iv_series_details_promo"
  />
  <RatingBar
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/rb_series_details_rating"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
      app:layout_constraintHorizontal_bias="0.037" android:rating="4.5"
      style="@android:style/Widget.Material.RatingBar.Indicator"
      app:layout_constraintTop_toBottomOf="@+id/iv_series_details_promo_gradient"/>
  <TextView
      android:text="The Big Bang Theory"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tv_series_details_name"
      android:textSize="30sp"
      app:fontFamily="@font/amaranth" android:textColor="@android:color/background_light"
      app:layout_constraintStart_toStartOf="@+id/iv_series_details_promo_gradient" android:layout_marginEnd="8dp"
      app:layout_constraintEnd_toEndOf="@+id/iv_series_details_promo_gradient" android:layout_marginRight="8dp"
      app:layout_constraintBottom_toTopOf="@+id/tv_series_details_category"
      app:layout_constraintHorizontal_bias="0.0" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
  <TextView
      android:text="Comedy"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tv_series_details_category"
      app:layout_constraintTop_toTopOf="@+id/iv_series_details_promo_gradient" android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toBottomOf="@+id/iv_series_details_promo_gradient"
      app:layout_constraintEnd_toEndOf="@+id/iv_series_details_promo_gradient"
      app:layout_constraintStart_toStartOf="@+id/iv_series_details_promo_gradient" android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp" android:textSize="16sp" android:textColor="@color/colorAccent"
      app:layout_constraintVertical_bias="1.0" app:layout_constraintHorizontal_bias="0.0"/>
  <android.support.constraint.ConstraintLayout
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@+id/rb_series_details_rating" app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:id="@+id/cl_series_play_opts_details"
      app:layout_constraintBottom_toTopOf="@+id/guideline">
    <ImageButton
        app:srcCompat="@drawable/ic_videogame_asset_black_56dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
        android:background="@null"/>
  </android.support.constraint.ConstraintLayout>
  <android.support.v7.widget.RecyclerView
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:id="@+id/rv_series_seasons_details"
      app:layout_constraintTop_toTopOf="@+id/guideline" android:layout_marginTop="8dp"/>
  <android.support.constraint.Guideline
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:id="@+id/guideline" app:layout_constraintGuide_percent="0.6"/>
  <View
      android:id="@+id/divider2"
      android:layout_width="395dp"
      android:layout_height="1dp"
      android:background="?android:attr/listDivider"
      app:layout_constraintTop_toBottomOf="@+id/cl_series_play_opts_details"
      app:layout_constraintBottom_toTopOf="@+id/rv_series_seasons_details" android:layout_marginStart="8dp"
      app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
  <ProgressBar
      style="?android:attr/progressBarStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/pb_season_recycler"
      android:visibility="gone"
      app:layout_constraintTop_toBottomOf="@+id/divider2" android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
      android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:indeterminate="true"/>
</android.support.constraint.ConstraintLayout>