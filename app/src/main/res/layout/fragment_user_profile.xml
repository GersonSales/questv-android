<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorGray" android:clickable="true"
                                             android:focusable="auto">

  <androidx.constraintlayout.widget.Guideline
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:id="@+id/guideline18"
      app:layout_constraintGuide_percent="0.15"/>
  <androidx.constraintlayout.widget.Guideline
      android:orientation="vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:id="@+id/guideline20"
      app:layout_constraintGuide_percent="0.85"/>
  <androidx.constraintlayout.widget.Guideline
      android:orientation="vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:id="@+id/guideline19"
      app:layout_constraintGuide_percent="0.15"/>
  <android.support.constraint.Guideline
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:id="@+id/guideline5" app:layout_constraintGuide_percent="0.4"/>
  <ImageView
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:srcCompat="@drawable/profile_pattern_bg"
      android:id="@+id/imageView"
      app:layout_constraintBottom_toTopOf="@+id/guideline29"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" android:scaleType="centerCrop"/>
  <View
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:id="@+id/view2"
      app:layout_constraintTop_toTopOf="@+id/guideline18"
      app:layout_constraintBottom_toTopOf="@+id/guideline5"
      app:layout_constraintStart_toStartOf="@+id/guideline19"
      app:layout_constraintEnd_toStartOf="@+id/guideline20"
      android:background="@drawable/view_radius_corners"/>
  <ImageView
      android:layout_width="96dp"
      android:layout_height="96dp"
      android:id="@+id/imageView8"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toBottomOf="@+id/view2"
      app:layout_constraintEnd_toStartOf="@+id/guideline20"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      app:layout_constraintStart_toStartOf="@+id/guideline19"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      app:layout_constraintVertical_bias="0.32" app:srcCompat="@drawable/user_profile_image"/>
  <TextView
      android:text="User"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tv_user_first_name"
      android:textSize="24sp" android:textStyle="bold"
      android:visibility="visible" android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/imageView8" android:layout_marginStart="8dp"
      app:layout_constraintStart_toStartOf="@+id/guideline19" android:layout_marginLeft="8dp"
      android:layout_marginEnd="4dp" app:layout_constraintEnd_toStartOf="@+id/guideline21"
      android:layout_marginRight="4dp" app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toTopOf="@+id/view3"/>
  <TextView
      android:text="Name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tv_user_last_name" app:layout_constraintStart_toStartOf="@+id/guideline21"
      app:layout_constraintEnd_toStartOf="@+id/guideline20" android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp" android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/imageView8" android:textSize="24sp" android:textStyle="bold"
      app:layout_constraintHorizontal_bias="0.0" android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
      android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/view5"/>
  <androidx.constraintlayout.widget.Guideline
      android:orientation="vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:id="@+id/guideline21"
      app:layout_constraintGuide_percent="0.5"/>
  <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:id="@+id/view3"
      app:layout_constraintStart_toStartOf="@+id/view2"
      app:layout_constraintEnd_toStartOf="@+id/guideline20"
      app:layout_constraintTop_toTopOf="@+id/view2" android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toBottomOf="@+id/view2" android:background="@color/colorWhiteLightDark"
      app:layout_constraintVertical_bias="0.7"/>
  <View
      android:layout_width="1dp"
      android:layout_height="0dp"
      android:id="@+id/view4"
      app:layout_constraintTop_toBottomOf="@+id/view3"
      app:layout_constraintBottom_toBottomOf="@+id/view2" android:background="@color/colorWhiteLightDark"
      app:layout_constraintStart_toStartOf="@+id/guideline19" android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline22"
      app:layout_constraintHorizontal_bias="1.0"/>
  <View
      android:layout_width="1dp"
      android:layout_height="0dp"
      android:id="@+id/view5"
      app:layout_constraintTop_toBottomOf="@+id/view3"
      app:layout_constraintStart_toStartOf="@+id/guideline21"
      android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
      app:layout_constraintBottom_toTopOf="@+id/guideline5" android:background="@color/colorWhiteLightDark"
      app:layout_constraintEnd_toStartOf="@+id/guideline23"
      app:layout_constraintHorizontal_bias="1.0"/>
  <androidx.constraintlayout.widget.Guideline
      android:orientation="vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:id="@+id/guideline22"
      app:layout_constraintGuide_percent="0.38"/>
  <androidx.constraintlayout.widget.Guideline
      android:orientation="vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:id="@+id/guideline23"
      app:layout_constraintGuide_percent="0.61"/>
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" app:srcCompat="@drawable/ic_attach_money_white_dark_4dp"
      android:id="@+id/iv_qcash_icon"
      app:layout_constraintTop_toBottomOf="@+id/view3" android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toTopOf="@+id/guideline5" app:layout_constraintEnd_toStartOf="@+id/guideline20"
      android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/view5"
      android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.3"/>
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" app:srcCompat="@drawable/ic_people_white_dark_24dp"
      android:id="@+id/iv_friends_icon"
      app:layout_constraintTop_toBottomOf="@+id/view3" android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toBottomOf="@+id/view2" app:layout_constraintEnd_toStartOf="@+id/view5"
      android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/view4"
      android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.3"/>
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" app:srcCompat="@drawable/ic_add_to_photos_white_dark_24dp"
      android:id="@+id/iv_contributions_icon"
      app:layout_constraintEnd_toStartOf="@+id/view4" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
      app:layout_constraintStart_toStartOf="@+id/guideline19" android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toTopOf="@+id/guideline5"
      app:layout_constraintTop_toBottomOf="@+id/view3" app:layout_constraintVertical_bias="0.3"/>
  <TextView
      android:text="121"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tv_contributions" app:layout_constraintEnd_toStartOf="@+id/guideline22"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="@+id/guideline19"
      android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
      android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/iv_contributions_icon"
      android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline5"/>
  <TextView
      android:text="12"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="@+id/guideline22"
      android:id="@+id/tv_friends" app:layout_constraintEnd_toStartOf="@+id/view5" android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
      android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/view2"
      android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/iv_friends_icon"/>
  <TextView
      android:text="Q$76"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tv_user_qcash" android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/iv_qcash_icon" android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toTopOf="@+id/guideline5" app:layout_constraintEnd_toStartOf="@+id/guideline20"
      android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
      app:layout_constraintStart_toStartOf="@+id/guideline23" android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"/>
  <androidx.constraintlayout.widget.Guideline
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:id="@+id/guideline29"
      app:layout_constraintGuide_percent="0.25"/>
  <FrameLayout
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/view2" app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:id="@+id/fl_profile_analytics">

  </FrameLayout>
  <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" app:srcCompat="@drawable/ic_create_white_dark_24dp"
      android:id="@+id/imageButton" app:layout_constraintEnd_toEndOf="@+id/view2"
      android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
      app:layout_constraintTop_toTopOf="@+id/guideline18" android:background="@null"/>
  <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow_back_white_24dp"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:id="@+id/ib_profile_back"
      android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:background="@null"/>
</android.support.constraint.ConstraintLayout>